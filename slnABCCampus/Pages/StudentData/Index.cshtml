@page
@model slnABCCampus.Pages.StudentData.IndexModel

@if(TempData["Success"] != null)
{
    <h2 style="font-size:small ; font-style:italic ">@TempData["Success"]</h2>


}

<div class=" container p-3">
    <div class=" row pt-4">

         <div class=" col-6">
        <h2 class="text-primary" style="color:rebeccapurple"> Student Details</h2>
        </div>

        <div class="col-6">
            <a asp-page="Create" class="btn btn-primary text-sm-end">
            Create New Student
            </a>
        </div>

    </div>

    <br /> <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    <h4>ID</h4>
                </th>
                <th>
                    <h4>NIC</h4>
                </th>
                <th>
                    <h4>Name</h4>
                </th>

                <th></th>
            </tr>
        </thead>


        <tbody>
            @foreach (var obj in Model.StudentDetail)
            {
                <tr>
                    <td width="20%">      @obj.dStudentID      </td>
                    <td width="50%">      @obj.szStudentName     </td>
                    <td width="30%">      @obj.szCity      </td>

                    <td>
                        <div class="w-75 btn-group" role="group">
                        <a asp-page="Edit" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <a asp-page="Delete" asp-route-id="@obj.dStudentID" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                        </div>
                    </td>

                </tr>
            }
        </tbody>

    </table>
</div>

