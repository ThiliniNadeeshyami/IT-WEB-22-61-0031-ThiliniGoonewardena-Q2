@page
@model slnABCCampus.Pages.StudentData.CreateModel


<form method="post">
    <div class ="border p-3 mt-4 ">
        <div class="row pb-2">
            <h2 class="text-primary pl-3"> Add New Student</h2>
        <hr/>
        </div>

        <div asp-validation-summary="All"></div>
        <div class="form">

        <div class="form-group">
                <div class="row">
                    <div class="col-md-1">
            <label asp-for="tblStudents.dStudentID">ID</label>
                    </div>
                    <div class="col-md-4">
            <input asp-for="@Model.tblStudents.dStudentID" />
            <span asp-validation-for="tblStudents.dStudentID"  class="text-danger"></span>
                    </div>
        </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-1">
            <label asp-for="tblStudents.szStudentName">Name</label>
                    </div>
                        <div class="col-md-4">
            <input asp-for="@Model.tblStudents.szStudentName"/>
            <span asp-validation-for="tblStudents.szStudentName" class="text-danger"></span>
                    </div>
                </div>
        </div>

            <div class="form-group">
                <div class="row">
        @*<div class="mb-3">*@
            @*City:*@
                <div class="col-md-1">
            <label asp-for="tblStudents.szCity">City</label>
                </div>
                    <div class="col-md-4">
            <input asp-for="@Model.tblStudents.szCity" />
                </div>
        </div>
            </div>


            <div class="form-group">
                <div class="row">
        @*<div class="mb-3">*@
            @*City:*@
                <div class="col-md-1">
            <label asp-for="tblStudents.dCourseID">Course</label>
                </div>
                    <div class="col-md-1">
            @*<input asp-for="@Model.tblStudents.dCourseID" />*@
                        <select asp-for="tblStudents.dCourseID" asp-items="@(new SelectList(Model.CourseDetail,"dCourseID", "szCourseName")) ">

                            <option value="" selected disabled>-- Select Course </option>

                        </select>
                </div>
        </div>

        </div>

        </div>
        <br />
        <button type ="submit" class="btn btn-primary" style="width:150px;">Create

        </button>
    </div>
</form>
